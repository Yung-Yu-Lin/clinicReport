@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card" style="height: 100%;" onclick="redirectToLogin()">
                <div class="card-body d-flex align-items-center" style="cursor: pointer;">
                    <div class="float-right" style="width: 30%;">
                        <img src="images/clinic.png" class="card-img-top" alt="Clinic Image">
                    </div>
                    <div class="ml-3">
                        <h5 class="card-title" style="padding-left: 1rem;">
                            <i class="fas fa-user-md"></i>
                            我是診所端
                        </h5>
                        <p style="padding-left: 1rem;">這是診所端的內容。</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mt-4 mt-sm-0" style="height: 100%;" onclick="redirectToWaitPublish()">
                <div class="card-body d-flex align-items-center" style="cursor: pointer;">
                    <div class="float-right" style="width: 30%;">
                        <img src="images/personal.png" class="card-img-top" alt="Personal Image">
                    </div>
                    <div class="ml-3">
                        <h5 class="card-title" style="padding-left: 1rem;">
                            <i class="fas fa-search"></i>
                            我是個人查詢端
                        </h5>
                        <p style="padding-left: 1rem;">這是個人查詢端的內容。</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function redirectToLogin() {
        window.location.href = "/Account/Login";
    }

    function redirectToWaitPublish() {
        window.location.href = "/Home/WaitPublish";
    }
</script>